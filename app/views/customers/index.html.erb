<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3">Customers</h1>
  <div class="d-flex gap-2">
    <%= button_to "Reset All", destroy_all_customers_path, method: :delete, data: { confirm: "Delete all customers?" }, class: "btn btn-danger" %>
    <%= link_to "New Customer", new_customer_path, class: "btn btn-primary" %>
  </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Plan</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to customer.name, customer %></td>
        <td><%= customer.plan %></td>
        <td><span class="badge text-bg-secondary"><%= customer.status %></span></td>
        <td class="d-flex justify-content-end gap-2">
          <%= link_to "Edit", edit_customer_path(customer), class: "btn btn-sm btn-outline-primary" %>
          <%= button_to "Delete", customer_path(customer), method: :delete, data: { confirm: "Delete this customer?" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
