<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3">Subjects</h1>
  <div class="d-flex gap-2">
    <%= button_to "Reset All", destroy_all_subjects_path, method: :delete, data: { confirm: "Delete all subjects?" }, class: "btn btn-danger" %>
    <%= link_to "New Subject", new_subject_path, class: "btn btn-primary" %>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Project</th>
      <th>Query</th>
      <th>Active</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= link_to subject.name, subject %></td>
        <td><%= subject.project&.name %></td>
        <td><%= subject.query %></td>
        <td><%= subject.active? ? "Yes" : "No" %></td>
        <td class="d-flex justify-content-end gap-2">
          <%= link_to "Edit", edit_subject_path(subject), class: "btn btn-sm btn-outline-primary" %>
          <%= button_to "Delete", subject_path(subject), method: :delete, data: { confirm: "Delete this subject?" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
