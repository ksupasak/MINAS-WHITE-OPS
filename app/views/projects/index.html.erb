<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3">Projects</h1>
  <div class="d-flex gap-2">
    <%= button_to "Reset All", destroy_all_projects_path, method: :delete, data: { confirm: "Delete all projects?" }, class: "btn btn-danger" %>
    <%= link_to "New Project", new_project_path, class: "btn btn-primary" %>
  </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Customer</th>
      <th>Posts</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project %></td>
        <td><span class="badge text-bg-secondary"><%= project.status %></span></td>
        <td><%= project.customer&.name %></td>
        <td><%= project.posts.count %></td>
        <td class="d-flex justify-content-end gap-2">
          <%= link_to "Edit", edit_project_path(project), class: "btn btn-sm btn-outline-primary" %>
          <%= button_to "Delete", project_path(project), method: :delete, data: { confirm: "Delete this project?" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
