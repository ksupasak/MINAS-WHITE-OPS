<script>
document.addEventListener('DOMContentLoaded', function() {
  const chatMessages = document.getElementById('chat-messages');
  const chatForm = document.getElementById('chat-form');
  const chatInput = document.getElementById('chat-input');
  const sendButton = document.getElementById('send-button');
  const streamingIndicator = document.getElementById('streaming-indicator');
  const searchResults = document.getElementById('search-results');
  
  let isStreaming = false;
  
  // Auto-scroll chat to bottom
  function scrollToBottom() {
    if (chatMessages) {
      chatMessages.scrollTop = chatMessages.scrollHeight;
    }
  }
  scrollToBottom();

  // Auto-resize chat textarea
  if (chatInput) {
    chatInput.addEventListener('input', function() {
      this.style.height = 'auto';
      this.style.height = Math.min(this.scrollHeight, 100) + 'px';
    });

    // Submit on Enter (without Shift)
    chatInput.addEventListener('keydown', function(e) {
      if (e.key === 'Enter' && !e.shiftKey) {
        e.preventDefault();
        if (this.value.trim() && !isStreaming) {
          chatForm.dispatchEvent(new Event('submit'));
        }
      }
    });

    chatInput.focus();
  }

  // Handle streaming chat form submission
  if (chatForm) {
    chatForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      if (isStreaming) return;
      
      const prompt = chatInput.value.trim();
      if (!prompt) return;
      
      isStreaming = true;
      sendButton.disabled = true;
      streamingIndicator.style.display = 'flex';
      
      // Remove welcome message if present
      const welcome = document.getElementById('chat-welcome');
      if (welcome) {
        welcome.remove();
      }
      
      // Add user message to chat
      const userMessage = createMessageElement('user', prompt);
      chatMessages.appendChild(userMessage);
      scrollToBottom();
      
      // Clear input
      chatInput.value = '';
      chatInput.style.height = 'auto';
      
      // Create assistant message placeholder
      const assistantMessage = createMessageElement('assistant', '');
      const messageText = assistantMessage.querySelector('.message-text');
      messageText.innerHTML = '<span class="streaming-cursor"></span>';
      chatMessages.appendChild(assistantMessage);
      scrollToBottom();
      
      try {
        const token = document.querySelector('input[name="authenticity_token"]').value;
        
        const response = await fetch('<%= llm_stream_path %>', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
            'X-CSRF-Token': token
          },
          body: new URLSearchParams({ prompt: prompt })
        });
        
        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }
        
        const reader = response.body.getReader();
        const decoder = new TextDecoder();
        let fullResponse = '';
        
        while (true) {
          const { done, value } = await reader.read();
          
          if (done) break;
          
          const text = decoder.decode(value);
          const lines = text.split('\n');
          
          for (const line of lines) {
            if (line.startsWith('data: ')) {
              try {
                const data = JSON.parse(line.substring(6));
                
                if (data.type === 'search') {
                  // Update search results
                  updateSearchResults(data);
                } else if (data.type === 'complete') {
                  // Streaming complete
                } else if (data.error) {
                  fullResponse += `\n\nError: ${data.error}`;
                  messageText.innerHTML = formatText(fullResponse);
                } else if (data.content) {
                  fullResponse += data.content;
                  messageText.innerHTML = formatText(fullResponse) + '<span class="streaming-cursor"></span>';
                  scrollToBottom();
                }
              } catch (parseError) {
                console.warn('Parse error:', parseError);
              }
            }
          }
        }
        
        // Remove cursor when done
        messageText.innerHTML = formatText(fullResponse);
        
      } catch (error) {
        console.error('Streaming error:', error);
        messageText.innerHTML = `<p style="color: #ff6b6b;">Error: ${error.message}</p>`;
      } finally {
        isStreaming = false;
        sendButton.disabled = false;
        streamingIndicator.style.display = 'none';
        scrollToBottom();
      }
    });
  }

  // Search input Enter key
  const searchInput = document.getElementById('search-input');
  if (searchInput) {
    searchInput.addEventListener('keydown', function(e) {
      if (e.key === 'Enter') {
        e.preventDefault();
        if (this.value.trim()) {
          this.closest('form').submit();
        }
      }
    });
  }
  
  // Helper functions
  function createMessageElement(role, content) {
    const div = document.createElement('div');
    div.className = `chat-message ${role}`;
    
    const now = new Date();
    const time = now.getHours().toString().padStart(2, '0') + ':' + 
                 now.getMinutes().toString().padStart(2, '0');
    
    const avatarContent = role === 'user' 
      ? '<%= current_user&.email&.first&.upcase || "U" %>'
      : '‚óà';
    
    div.innerHTML = `
      <div class="message-avatar">${avatarContent}</div>
      <div class="message-content">
        <div class="message-header">
          <span class="message-role">${role.charAt(0).toUpperCase() + role.slice(1)}</span>
          <span class="message-time">${time}</span>
        </div>
        <div class="message-text">${formatText(content)}</div>
      </div>
    `;
    
    return div;
  }
  
  function formatText(text) {
    if (!text) return '';
    // Simple text formatting - escape HTML and convert newlines
    return text
      .replace(/&/g, '&amp;')
      .replace(/</g, '&lt;')
      .replace(/>/g, '&gt;')
      .split('\n')
      .map(line => `<p>${line || '&nbsp;'}</p>`)
      .join('');
  }
  
  function updateSearchResults(data) {
    if (!data.sources || data.sources.length === 0) return;
    
    const searchEmpty = document.getElementById('search-empty');
    if (searchEmpty) {
      searchEmpty.remove();
    }
    
    let html = `
      <div class="search-query-display">
        <div class="query-label">Search Query:</div>
        <div class="query-text">${escapeHtml(data.query)}</div>
      </div>
    `;
    
    if (data.answer) {
      html += `
        <div class="ai-answer-box">
          <div class="answer-header">
            <span class="answer-icon">‚óà</span>
            <span>AI Summary</span>
          </div>
          <div class="answer-content">${formatText(data.answer)}</div>
        </div>
      `;
    }
    
    html += `
      <div class="sources-header">
        <span class="sources-icon">‚óß</span>
        <span>Related Posts (${data.sources.length})</span>
      </div>
      <div class="sources-list">
    `;
    
    data.sources.forEach((source, idx) => {
      const score = source.score ? `
        <span class="source-score">
          <span class="score-icon">‚óà</span>
          ${(source.score * 100).toFixed(1)}% match
        </span>
      ` : '';
      
      const viewLink = source.post_id ? `
        <a href="/posts/${source.post_id}" class="source-link">
          <span class="link-icon">‚Üó</span> View
        </a>
      ` : '';
      
      html += `
        <div class="source-card">
          <div class="source-header">
            <span class="source-number">#${idx + 1}</span>
            ${score}
            ${viewLink}
          </div>
          <div class="source-title">${escapeHtml(source.title || 'Post').substring(0, 100)}</div>
          <div class="source-snippet">${escapeHtml(source.snippet || '').substring(0, 250)}</div>
        </div>
      `;
    });
    
    html += '</div>';
    
    searchResults.innerHTML = html;
  }
  
  function escapeHtml(text) {
    if (!text) return '';
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }
});

function setPrompt(text) {
  const input = document.getElementById('chat-input');
  if (input) {
    input.value = text;
    input.style.height = 'auto';
    input.style.height = Math.min(input.scrollHeight, 100) + 'px';
    input.focus();
  }
}
</script>
