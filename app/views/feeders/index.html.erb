<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3">Feeders</h1>
  <div class="d-flex gap-2">
    <%= button_to "Reset All", destroy_all_feeders_path, method: :delete, data: { confirm: "Delete all feeders?" }, class: "btn btn-danger" %>
    <%= link_to "New Feeder", new_feeder_path, class: "btn btn-primary" %>
  </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Status</th>
      <th>Schedule</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @feeders.each do |feeder| %>
      <tr>
        <td><%= link_to feeder.name, feeder %></td>
        <td><%= feeder.feeder_type.name %></td>
        <td><span class="badge text-bg-secondary"><%= feeder.status %></span></td>
        <td><%= feeder.schedule_cron %></td>
        <td class="d-flex justify-content-end gap-2">
          <%= link_to "Edit", edit_feeder_path(feeder), class: "btn btn-sm btn-outline-primary" %>
          <%= button_to "Delete", feeder_path(feeder), method: :delete, data: { confirm: "Delete this feeder?" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
