<div class="page-header-cyber">
  <h1 class="page-title-cyber">Channels</h1>
  <div class="d-flex gap-2">
    <%= button_to "Reset All", destroy_all_channels_path, method: :delete, data: { confirm: "Delete all channels?" }, class: "btn-cyber btn-danger-cyber" %>
    <%= link_to "New Channel", new_channel_path, class: "btn-cyber btn-primary-cyber" %>
  </div>
</div>

<div class="glass-card">
  <div class="card-body-cyber p-0">
    <table class="table-cyber">
      <thead>
        <tr>
          <th>Name</th>
          <th>Created</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @channels.each do |channel| %>
          <tr>
            <td><%= link_to channel.name, channel %></td>
            <td><%= channel.created_at&.strftime("%Y-%m-%d %H:%M") %></td>
            <td class="text-end">
              <%= link_to "Edit", edit_channel_path(channel), class: "btn-cyber btn-secondary-cyber btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
