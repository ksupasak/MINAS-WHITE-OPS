<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3">Users</h1>
  <div class="d-flex gap-2">
    <%= button_to "Reset All", destroy_all_users_path, method: :delete, data: { confirm: "Delete all users?" }, class: "btn btn-danger" %>
    <%= link_to "New User", new_user_path, class: "btn btn-primary" %>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th>Customer</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.email, user %></td>
        <td><%= user.role %></td>
        <td><%= user.customer&.name %></td>
        <td class="d-flex justify-content-end gap-2">
          <%= link_to "Edit", edit_user_path(user), class: "btn btn-sm btn-outline-primary" %>
          <%= button_to "Delete", user_path(user), method: :delete, data: { confirm: "Delete this user?" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
