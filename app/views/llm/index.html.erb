<div class="page-header-cyber">
  <h1 class="page-title-cyber">AI Search & Chat</h1>
  <div class="d-flex gap-2 align-items-center">
    <span class="model-badge">
      <span class="model-icon">‚óà</span>
      <%= @current_model %>
    </span>
    <%= button_to "Clear All", llm_path, method: :delete, class: "btn-cyber btn-secondary-cyber", data: { confirm: "Clear all messages and search results?" } %>
  </div>
</div>

<div class="dual-panel-container">
  <!-- Left Panel: AI Chat -->
  <div class="panel-cyber chat-panel">
    <div class="panel-header">
      <span class="panel-icon">‚óà</span>
      <span class="panel-title">AI Chat</span>
      <span class="streaming-indicator" id="streaming-indicator" style="display: none;">
        <span class="dot"></span>
        <span class="dot"></span>
        <span class="dot"></span>
      </span>
    </div>
    
    <div class="chat-messages" id="chat-messages">
      <% if @messages.empty? %>
        <div class="chat-welcome" id="chat-welcome">
          <div class="welcome-icon">‚óà</div>
          <h3>AI Chat</h3>
          <p>Ask me anything about your social media data</p>
          <div class="welcome-suggestions">
            <button class="suggestion-chip" onclick="setPrompt('Summarize the latest trending hashtags')">
              <span class="chip-icon">‚óá</span> Trending hashtags
            </button>
            <button class="suggestion-chip" onclick="setPrompt('Analyze sentiment of recent posts')">
              <span class="chip-icon">‚óà</span> Analyze sentiment
            </button>
          </div>
        </div>
      <% else %>
        <% @messages.each do |msg| %>
          <div class="chat-message <%= msg[:role] || msg['role'] %>">
            <div class="message-avatar">
              <% if (msg[:role] || msg['role']) == 'user' %>
                <%= current_user&.email&.first&.upcase || 'U' %>
              <% else %>
                ‚óà
              <% end %>
            </div>
            <div class="message-content">
              <div class="message-header">
                <span class="message-role"><%= (msg[:role] || msg['role']).capitalize %></span>
                <% if msg[:timestamp] || msg['timestamp'] %>
                  <span class="message-time"><%= (msg[:timestamp] || msg['timestamp']).to_time.strftime("%H:%M") rescue '' %></span>
                <% end %>
              </div>
              <div class="message-text"><%= simple_format(msg[:content] || msg['content']) %></div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="chat-input-container">
      <form id="chat-form" class="chat-form">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="chat-input-box">
          <div class="input-glow"></div>
          <div class="chat-input-inner">
            <div class="input-icon">‚ú¶</div>
            <textarea name="prompt" 
                class="chat-textarea" 
                id="chat-input"
                placeholder="Ask AI... (Enter to send)" 
                rows="2"
                autofocus></textarea>
            <button type="submit" class="send-button" id="send-button">
              <span class="send-icon">‚ñ∂</span>
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <!-- Right Panel: Search Results -->
  <div class="panel-cyber search-panel">
    <div class="panel-header">
      <span class="panel-icon">‚óé</span>
      <span class="panel-title">Post Search Results</span>
    </div>
    
    <div class="search-content" id="search-results">
      <% if @search_results.present? && @search_results[:sources].present? %>
        <div class="search-query-display">
          <div class="query-label">Search Query:</div>
          <div class="query-text"><%= @search_results[:query] || @search_results['query'] %></div>
        </div>
        
        <% if (@search_results[:answer] || @search_results['answer']).present? %>
          <div class="ai-answer-box">
            <div class="answer-header">
              <span class="answer-icon">‚óà</span>
              <span>AI Summary</span>
            </div>
            <div class="answer-content"><%= simple_format(@search_results[:answer] || @search_results['answer']) %></div>
          </div>
        <% end %>
        
        <div class="sources-header">
          <span class="sources-icon">‚óß</span>
          <span>Related Posts (<%= (@search_results[:sources] || @search_results['sources'])&.count || 0 %>)</span>
        </div>
        
        <div class="sources-list">
          <% (@search_results[:sources] || @search_results['sources'])&.each_with_index do |source, idx| %>
            <% 
              post_id = source[:post_id] || source['post_id']
              post = Post.find(post_id) rescue nil
              score = source[:score] || source['score']
              title = source[:title] || source['title'] || post&.title
              snippet = source[:snippet] || source['snippet']
            %>
            <div class="source-card">
              <div class="source-header">
                <span class="source-number">#<%= idx + 1 %></span>
                <% if score %>
                  <span class="source-score">
                    <span class="score-icon">‚óà</span>
                    <%= (score * 100).round(1) %>% match
                  </span>
                <% end %>
                <% if post %>
                  <%= link_to post_path(post), class: "source-link" do %>
                    <span class="link-icon">‚Üó</span> View
                  <% end %>
                <% end %>
              </div>
              <div class="source-title">
                <%= title&.truncate(100) || "Post" %>
              </div>
              <div class="source-snippet">
                <%= snippet&.truncate(250) %>
              </div>
              <div class="source-meta">
                <% if post&.source %>
                  <span class="meta-tag source-tag"><%= post.source %></span>
                <% end %>
                <% if post&.subject %>
                  <span class="meta-tag subject-tag">Subject: <%= post.subject.name rescue post.subject %></span>
                <% end %>
                <% if post&.created_at %>
                  <span class="meta-tag date-tag"><%= post.created_at.strftime("%Y-%m-%d") %></span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="search-empty" id="search-empty">
          <div class="empty-icon">‚óé</div>
          <h4>Post Search</h4>
          <p>Ask a question in the AI Chat to search through your indexed posts.</p>
          <div class="empty-hint">
            <span class="hint-icon">üí°</span>
            Results will appear here based on your queries
          </div>
        </div>
      <% end %>
    </div>
    
    <!-- Direct Search Form -->
    <div class="search-input-container">
      <%= form_with url: llm_search_path, method: :post, local: true, class: "search-form" do |f| %>
        <div class="search-input-box">
          <div class="search-icon">üîç</div>
          <%= f.text_field :query, 
              class: "search-input", 
              id: "search-input",
              placeholder: "Search posts directly..." %>
          <button type="submit" class="search-button">
            <span>Search</span>
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>

