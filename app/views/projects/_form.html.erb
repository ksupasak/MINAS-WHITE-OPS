<%= form_with(model: project, class: "card shadow-sm") do |form| %>
  <div class="card-body">
    <% if project.errors.any? %>
      <div class="alert alert-danger"><%= project.errors.full_messages.to_sentence %></div>
    <% end %>

    <% if current_user.super_admin? %>
      <div class="mb-3">
        <%= form.label :customer_id, "Customer", class: "form-label" %>
        <%= form.collection_select :customer_id, Customer.all, :id, :name, {}, class: "form-select" %>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control", rows: 3 %>
    </div>



    <div class="mb-3">
      <%= form.label :sentiment_prompt, class: "form-label" %>
      <%= form.text_area :sentiment_prompt, class: "form-control", rows: 3 %>
    </div>

     <div class="mb-3">
      <%= form.label :status, class: "form-label" %>
      <%= form.select :status, %w[active paused completed], {}, class: "form-select" %>
    </div>
  </div>

  
  <div class="card-footer text-end">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
